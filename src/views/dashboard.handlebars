<div class="pt-4">
  <div class="card">
    <div class="card-body">
      <div class="card-title">
        {{> header title='Dashboard'}}
      </div>
      <div class="card-text row">
        <div class="col-md-8">
          <h5 class="mb-3 text-center text-md-left">Registered Users</h5>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th scope="col">Name</th>
                  <th scope="col">Email</th>
                  <th scope="col">Username</th>
                  <th scope="col">Actions</th>
                </tr>
              </thead>
              <tbody>
                {{#each users}}
                  <tr>
                    <td>
                      {{name}} 
                      {{#ifeq ../currentUser username}}
                        <span class="badge badge-pill badge-dark">You</span>
                      {{/ifeq}}
                    </td>
                    <td>{{email}}</td>
                    <td>{{username}}</td>
                    <td>
                      <ul class="list-inline">
                        <li class="list-inline-item">
                          <a href="">Edit</a>
                        </li>
                        <li class="list-inline-item">
                          <a href="">Delete</a>
                        </li>
                      </ul>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
        <div class="col-md-4">
          <h5 class="mb-3 text-center text-md-left">Add User</h5>
          {{> user-form }}
        </div>
      </div> 
    </div>
  </div>
</div>