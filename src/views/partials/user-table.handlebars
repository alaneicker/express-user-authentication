<div id="messaging"></div>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col" class="text-center">Email</th>
        <th scope="col" class="text-center">Username</th>
        <th scope="col" class="text-right">Actions</th>
      </tr>
    </thead>
    <tbody id="user-table-body">
      {{#each users}}
        <tr id="row-{{id}}">
          <td class="text-nowrap">
            {{name}} 
            {{#ifeq ../currentUser username}}
              <span class="badge badge-pill badge-dark">You</span>
            {{/ifeq}}
          </td>
          <td class="text-center">{{email}}</td>
          <td class="text-center">{{username}}</td>
          <td class="text-right">
            <ul class="list-inline text-nowrap">
              <li class="list-inline-item">
                <a href="/user/edit/{{id}}" class="btn btn-sm btn-dark">Edit</a>
              </li>
              <li class="list-inline-item">
                <button type="button" class="btn btn-sm btn-danger" data-delete-user="{{id}}">Delete</button>
              </li>
            </ul>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<div id="delete-modal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Are you sure?</h5>
        <button type="button" class="close" data-dismiss="#delete-modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Clicking delete with permanently remove the selected user.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="#delete-modal">Cancel</button>
        <button id="confirm-delete-btn" type="button" class="btn btn-primary">Delete</button>
      </div>
    </div>
  </div>
</div>

{{#contentFor "scripts"}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.18.0/axios.min.js"></script>
<script src="/js/user-table.js"></script>
<script>new UserDeletion();</script>
{{/contentFor}}